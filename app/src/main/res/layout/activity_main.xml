<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <EditText
        android:hint="0"
        android:id="@+id/edt_satu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <EditText
        android:hint="0"
        android:id="@+id/edt_dua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_satu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="Autofill,HardcodedText,ObsoleteLayoutParam,RtlHardcoded,TextFields" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_tambah"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_dua"
            android:text="+"
            android:background="@color/purple_500"
            tools:ignore="ButtonStyle,HardcodedText,ObsoleteLayoutParam" />

        <Button
            android:id="@+id/btn_kurang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="@color/purple_700"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/btn_kali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:background="@color/teal_200"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/btn_bagi"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:background="@color/teal_700"
            tools:ignore="ButtonStyle,HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasilnya : "
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>


</LinearLayout>